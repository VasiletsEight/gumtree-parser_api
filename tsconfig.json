{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "removeComments": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "typeRoots": [
      "./src/typings/",
      "./node_modules/@types/"
    ]
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src/**/*"
  ]
}